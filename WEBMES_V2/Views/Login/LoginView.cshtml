@model WEBMES_V2.Models.DTO.LoginUserDTO.UserDTO
@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/adminlte_ATEC_Theme.css">
    <link rel="stylesheet" href="~/css/login_ATEC_Theme.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom_Theme_ATEC.css">

    <link rel="shortcut icon" type="image/jpg" href="~/img/Medicard_Logo.jpg" />   
    <title>Login</title>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card login-form">
                    <div class="card-header">
                        <img src="~/img/Medicard_Logo.jpg" alt="ATEC Logo" class="brand-image img-circle elevation-3 card-logo" style="opacity: .8">
                    </div>
                    <div class="card-body">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="mb-3">
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@modelError.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                          <!-- Login Form -->
                        @using (Html.BeginForm("LoginView", "Login", FormMethod.Post))
                        {
                            <div class="mb-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Username, new { @class = "text-white" })
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } }) 
                              @*       @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" }) *@
                                </div>
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Password, new { @class = "text-white" })
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } }) 
                  @*               @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" }) *@
                            </div>
                            <div class="text-center mt-4 mb-3">
                                <button type="submit" class="ATEC-button-primary">Login</button>
                            </div>

                        }
                        <div class="row">
                           <div class="col-md-12 pl-2 pr-2">
                                <div class="float-left">
                                    <a href="#" class="text-white font-weight-bold">Sign Up</a>
                                </div>
                               <div class="float-right">
                                   <a href="#" class="text-white font-weight-bold">Forgot Password?</a>
                               </div>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        localStorage.clear();
    </script>
</body>

</html>
